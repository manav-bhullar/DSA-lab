Q4


#include <iostream>
using namespace std;

int main() {
    int n, arr[100];
    cin >> n;
    for (int i = 0; i < n; i++) cin >> arr[i];

    int start = 0, end = n - 1;
    while (start < end) {
        swap(arr[start], arr[end]);
        start++; end--;
    }

    for (int i = 0; i < n; i++) cout << arr[i] << " ";
}


#include <iostream>
using namespace std;

int main() {
    int a[10][10], b[10][10], c[10][10] = {0};
    int r1, c1, r2, c2;

    cin >> r1 >> c1;
    for (int i = 0; i < r1; i++)
        for (int j = 0; j < c1; j++)
            cin >> a[i][j];

    cin >> r2 >> c2;
    for (int i = 0; i < r2; i++)
        for (int j = 0; j < c2; j++)
            cin >> b[i][j];

    if (c1 != r2) {
        cout << "Multiplication not possible";
        return 0;
    }

    for (int i = 0; i < r1; i++)
        for (int j = 0; j < c2; j++)
            for (int k = 0; k < c1; k++)
                c[i][j] += a[i][k] * b[k][j];

    for (int i = 0; i < r1; i++) {
        for (int j = 0; j < c2; j++)
            cout << c[i][j] << " ";
        cout << endl;
    }
}



#include <iostream>
using namespace std;

int main() {
    int arr[10][10], r, c;
    cin >> r >> c;

    for (int i = 0; i < r; i++)
        for (int j = 0; j < c; j++)
            cin >> arr[i][j];

    for (int j = 0; j < c; j++) {
        for (int i = 0; i < r; i++)
            cout << arr[i][j] << " ";
        cout << endl;
    }
}


Q5

#include <iostream>
using namespace std;

int main() {
    int arr[10][10], r, c;
    cin >> r >> c;

    for (int i = 0; i < r; i++)
        for (int j = 0; j < c; j++)
            cin >> arr[i][j];

    cout << "Row sums: ";
    for (int i = 0; i < r; i++) {
        int sum = 0;
        for (int j = 0; j < c; j++)
            sum += arr[i][j];
        cout << sum << " ";
    }

    cout << "\nColumn sums: ";
    for (int j = 0; j < c; j++) {
        int sum = 0;
        for (int i = 0; i < r; i++)
            sum += arr[i][j];
        cout << sum << " ";
    }
}


