#include <iostream>
using namespace std;

int main() {
    int arr[100], n = 0, choice, pos, val, i;

    while (true) {
        cout << "\n--- MENU ---\n";
        cout << "1. CREATE\n2. DISPLAY\n3. INSERT\n4. DELETE\n5. LINEAR SEARCH\n6. EXIT\n";
        cout << "Enter choice: ";
        cin >> choice;

        switch (choice) {
        case 1:
            cout << "Enter number of elements: ";
            cin >> n;
            cout << "Enter elements: ";
            for (i = 0; i < n; i++) cin >> arr[i];
            break;

        case 2:
            if (n == 0) { cout << "Array empty\n"; break; }
            cout << "Array: ";
            for (i = 0; i < n; i++) cout << arr[i] << " ";
            cout << endl;
            break;

        case 3:
            cout << "Enter position (0-based): ";
            cin >> pos;
            cout << "Enter value: ";
            cin >> val;
            if (pos < 0 || pos > n) { cout << "Invalid position\n"; break; }
            for (i = n; i > pos; i--) arr[i] = arr[i-1];
            arr[pos] = val;
            n++;
            break;

        case 4:
            cout << "Enter position to delete (0-based): ";
            cin >> pos;
            if (pos < 0 || pos >= n) { cout << "Invalid position\n"; break; }
            for (i = pos; i < n-1; i++) arr[i] = arr[i+1];
            n--;
            break;

        case 5:
            cout << "Enter value to search: ";
            cin >> val;
            for (i = 0; i < n; i++) {
                if (arr[i] == val) {
                    cout << "Found at index " << i << endl;
                    break;
                }
            }
            if (i == n) cout << "Not found\n";
            break;

        case 6:
            return 0;

        default:
            cout << "Invalid choice\n";
        }
    }
}












//Q2


#include <iostream>
using namespace std;

int main() {
    int arr[100], n;
    cout << "Enter n: ";
    cin >> n;

    cout << "Enter elements: ";
    for (int i = 0; i < n; i++) cin >> arr[i];

    for (int i = 0; i < n; i++) {
        for (int j = i + 1; j < n; j++) {
            if (arr[i] == arr[j]) {
                // Shift
                for (int k = j; k < n - 1; k++) arr[k] = arr[k + 1];
                n--;
                j--; 
            }
        }
    }

    cout << "Array after removing duplicates: ";
    for (int i = 0; i < n; i++) cout << arr[i] << " ";
}


