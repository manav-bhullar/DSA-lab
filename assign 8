#include <bits/stdc++.h>
using namespace std;

struct Node {
    int data;
    Node* left;
    Node* right;
    Node(int v) : data(v), left(NULL), right(NULL) {}
};

// ---------------- Binary Tree + BST Core ----------------

Node* insertBST(Node* root, int val) {
    if(!root) return new Node(val);
    if(val < root->data) root->left = insertBST(root->left, val);
    else if(val > root->data) root->right = insertBST(root->right, val);
    return root;
}

void preorder(Node* root) {
    if(!root) return;
    cout << root->data << " ";
    preorder(root->left);
    preorder(root->right);
}

void inorder(Node* root) {
    if(!root) return;
    inorder(root->left);
    cout << root->data << " ";
    inorder(root->right);
}

void postorder(Node* root) {
    if(!root) return;
    postorder(root->left);
    postorder(root->right);
    cout << root->data << " ";
}

Node* searchRec(Node* root, int key) {
    if(!root || root->data == key) return root;
    return key < root->data ? searchRec(root->left, key) : searchRec(root->right, key);
}

Node* searchIter(Node* root, int key) {
    while(root) {
        if(root->data == key) return root;
        if(key < root->data) root = root->left;
        else root = root->right;
    }
    return NULL;
}

Node* findMin(Node* root) {
    while(root && root->left) root = root->left;
    return root;
}

Node* findMax(Node* root) {
    while(root && root->right) root = root->right;
    return root;
}

Node* inorderSuccessor(Node* root, Node* target) {
    if(target->right) return findMin(target->right);
    Node* succ = NULL;
    while(root) {
        if(target->data < root->data) {
            succ = root;
            root = root->left;
        } else root = root->right;
    }
    return succ;
}

Node* inorderPredecessor(Node* root, Node* target) {
    if(target->left) return findMax(target->left);
    Node* pred = NULL;
    while(root) {
        if(target->data > root->data) {
            pred = root;
            root = root->right;
        } else root = root->left;
    }
    return pred;
}

Node* deleteNode(Node* root, int key) {
    if(!root) return root;
    if(key < root->data) root->left = deleteNode(root->left, key);
    else if(key > root->data) root->right = deleteNode(root->right, key);
    else {
        if(!root->left) {
            Node* t = root->right;
            delete root;
            return t;
        }
        else if(!root->right) {
            Node* t = root->left;
            delete root;
            return t;
        }
        Node* t = findMin(root->right);
        root->data = t->data;
        root->right = deleteNode(root->right, t->data);
    }
    return root;
}

int maxDepth(Node* root) {
    if(!root) return 0;
    return 1 + max(maxDepth(root->left), maxDepth(root->right));
}

int minDepth(Node* root) {
    if(!root) return 0;
    return 1 + min(minDepth(root->left), minDepth(root->right));
}

bool isBSTUtil(Node* root, long minv, long maxv) {
    if(!root) return true;
    if(root->data <= minv || root->data >= maxv) return false;
    return isBSTUtil(root->left, minv, root->data) &&
           isBSTUtil(root->right, root->data, maxv);
}

bool isBST(Node* root) {
    return isBSTUtil(root, LONG_MIN, LONG_MAX);
}

// ---------------- HeapSort ----------------

void heapify(int arr[], int n, int i) {
    int largest = i;
    int l = 2*i+1, r = 2*i+2;
    if(l < n && arr[l] > arr[largest]) largest = l;
    if(r < n && arr[r] > arr[largest]) largest = r;
    if(largest != i) {
        swap(arr[i], arr[largest]);
        heapify(arr, n, largest);
    }
}

void heapSort(int arr[], int n, bool increasing=true) {
    for(int i=n/2-1; i>=0; i--) heapify(arr, n, i);
    for(int i=n-1; i>0; i--) {
        swap(arr[0], arr[i]);
        heapify(arr, i, 0);
    }
    if(!increasing) reverse(arr, arr+n);
}

// ---------------- Priority Queue using Max Heap ----------------

class MaxHeap {
public:
    int arr[1000];
    int size;

    MaxHeap() : size(0) {}

    void insert(int val) {
        arr[size] = val;
        int i = size++;
        while(i > 0 && arr[(i-1)/2] < arr[i]) {
            swap(arr[i], arr[(i-1)/2]);
            i = (i-1)/2;
        }
    }

    int extractMax() {
        if(size == 0) return -1;
        int root = arr[0];
        arr[0] = arr[--size];
        heapify(arr, size, 0);
        return root;
    }

    int getMax() {
        return size ? arr[0] : -1;
    }
};

// ---------------- MAIN (Test Everything Here) ----------------

int main() {
    Node* root = NULL;
    root = insertBST(root, 10);
    root = insertBST(root, 5);
    root = insertBST(root, 15);
    root = insertBST(root, 3);
    root = insertBST(root, 7);

    cout << "Preorder: "; preorder(root); cout << endl;
    cout << "Inorder: "; inorder(root); cout << endl;
    cout << "Postorder: "; postorder(root); cout << endl;

    cout << "Search 7: " << (searchIter(root, 7) ? "Found" : "Not Found") << endl;
    cout << "Min: " << findMin(root)->data << endl;
    cout << "Max: " << findMax(root)->data << endl;

    cout << "Max Depth: " << maxDepth(root) << endl;
    cout << "Min Depth: " << minDepth(root) << endl;
    cout << "Is BST: " << (isBST(root) ? "Yes" : "No") << endl;

    cout << "Deleting 5..." << endl;
    root = deleteNode(root, 5);
    cout << "Inorder after delete: "; inorder(root); cout << endl;

    int arr[] = {4,1,3,9,7};
    int n = 5;
    heapSort(arr, n, true);
    cout << "Heapsort Increasing: ";
    for(int x : arr) cout << x << " ";
    cout << endl;

    heapSort(arr, n, false);
    cout << "Heapsort Decreasing: ";
    for(int x : arr) cout << x << " ";
    cout << endl;

    MaxHeap h;
    h.insert(10);
    h.insert(40);
    h.insert(5);
    h.insert(15);

    cout << "Max Heap Extract: " << h.extractMax() << endl;
    cout << "Current Max: " << h.getMax() << endl;

    return 0;
}
