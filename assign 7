#include <iostream>
using namespace std;

/* ------------------- SELECTION SORT ------------------- */
void selectionSort(int a[], int n) {
    for (int i = 0; i < n - 1; i++) {
        int minIdx = i;
        for (int j = i + 1; j < n; j++)
            if (a[j] < a[minIdx])
                minIdx = j;
        swap(a[minIdx], a[i]);
    }
}

/* -------- IMPROVED SELECTION SORT (MIN + MAX EACH PASS) -------- */
void improvedSelectionSort(int a[], int n) {
    int left = 0, right = n - 1;

    while (left < right) {
        int minIdx = left, maxIdx = right;

        // If the element at left > element at right, fix positions
        if (a[minIdx] > a[maxIdx]) 
            swap(a[minIdx], a[maxIdx]);

        for (int i = left + 1; i < right; i++) {
            if (a[i] < a[minIdx]) minIdx = i;
            else if (a[i] > a[maxIdx]) maxIdx = i;
        }

        swap(a[left], a[minIdx]);
        if (maxIdx == left) maxIdx = minIdx;  // adjust
        swap(a[right], a[maxIdx]);

        left++;
        right--;
    }
}

/* ------------------- INSERTION SORT ------------------- */
void insertionSort(int a[], int n) {
    for (int i = 1; i < n; i++) {
        int key = a[i], j = i - 1;
        while (j >= 0 && a[j] > key) {
            a[j + 1] = a[j];
            j--;
        }
        a[j + 1] = key;
    }
}

/* ------------------- BUBBLE SORT ------------------- */
void bubbleSort(int a[], int n) {
    for (int i = 0; i < n - 1; i++) {
        bool swapped = false;
        for (int j = 0; j < n - i - 1; j++)
            if (a[j] > a[j + 1]) {
                swap(a[j], a[j + 1]);
                swapped = true;
            }
        if (!swapped) break;
    }
}

/* ------------------- MERGE SORT ------------------- */
void merge(int a[], int l, int m, int r) {
    int n1 = m - l + 1, n2 = r - m;
    int L[n1], R[n2];

    for (int i = 0; i < n1; i++) L[i] = a[l + i];
    for (int i = 0; i < n2; i++) R[i] = a[m + 1 + i];

    int i = 0, j = 0, k = l;

    while (i < n1 && j < n2)
        a[k++] = (L[i] <= R[j] ? L[i++] : R[j++]);

    while (i < n1) a[k++] = L[i++];
    while (j < n2) a[k++] = R[j++];
}

void mergeSort(int a[], int l, int r) {
    if (l >= r) return;
    int m = (l + r) / 2;
    mergeSort(a, l, m);
    mergeSort(a, m + 1, r);
    merge(a, l, m, r);
}

/* ------------------- QUICK SORT ------------------- */
int partition(int a[], int low, int high) {
    int pivot = a[high], i = low - 1;
    for (int j = low; j < high; j++)
        if (a[j] <= pivot)
            swap(a[++i], a[j]);
    swap(a[i + 1], a[high]);
    return i + 1;
}

void quickSort(int a[], int low, int high) {
    if (low >= high) return;
    int pi = partition(a, low, high);
    quickSort(a, low, pi - 1);
    quickSort(a, pi + 1, high);
}

/* ------------------- DISPLAY ------------------- */
void printArr(int a[], int n) {
    for (int i = 0; i < n; i++)
        cout << a[i] << " ";
    cout << endl;
}

/* ------------------- MAIN (DEMO) ------------------- */
int main() {
    int arr[] = {29, 10, 14, 37, 13};
    int n = 5;

    cout << "Original: ";
    printArr(arr, n);

    // Try any:
    // selectionSort(arr, n);
    // improvedSelectionSort(arr, n);
    // insertionSort(arr, n);
    // bubbleSort(arr, n);
    // mergeSort(arr, 0, n - 1);
    // quickSort(arr, 0, n - 1);

    improvedSelectionSort(arr, n);

    cout << "Sorted:   ";
    printArr(arr, n);

    return 0;
}
